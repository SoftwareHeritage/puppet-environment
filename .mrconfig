[swh-site]
checkout = git clone git@git.softwareheritage.org:swh/sysadm/puppet/swh-site \
	 && cd swh-site \
	 && git checkout -b production origin/production

[swh-profile]
checkout = git clone git@git.softwareheritage.org:swh/sysadm/puppet/swh-profile

[swh-role]
checkout = git clone git@git.softwareheritage.org:swh/sysadm/puppet/swh-role

[puppetlabs-apache]
