[swh-site]
checkout = git clone git@git.softwareheritage.org:swh/sysadm/puppet/swh-site \
	 && cd swh-site \
	 && git checkout -b production origin/production

[swh-profile]
checkout = git clone git@git.softwareheritage.org:swh/sysadm/puppet/swh-profile

[swh-role]
checkout = git clone git@git.softwareheritage.org:swh/sysadm/puppet/swh-role

[puppetlabs-ntp]
checkout = git clone git@git.softwareheritage.org:swh/sysadm/puppet/puppetlabs-ntp \
	 && cd puppetlabs-ntp \
	 && git remote add upstream https://github.com/puppetlabs/puppetlabs-ntp \
	 && git fetch upstream

[puppetlabs-stdlib]
checkout = git clone git@git.softwareheritage.org:swh/sysadm/puppet/puppetlabs-stdlib \
	 && cd puppetlabs-stdlib \
	 && git remote add upstream https://github.com/puppetlabs/puppetlabs-stdlib \
	 && git fetch upstream
